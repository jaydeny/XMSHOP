@{

    Layout = "~/Views/Shared/_Form.cshtml";
}
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                
                <tr>
                    <th class="formTitle">活动标题</th>
                    <td class="formValue">
                        <input id="Title" name="Title" minlength="6" maxlength="16" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">活动内容</th>
                    <td class="formValue">
                        <textarea id="Content" name="Content" minlength="6" maxlength="16" type="text" class="form-control required"></textarea>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">活动开始时间</th>
                    <td class="formValue">
                        <input id="StartDate" name="StartDate" minlength="6" maxlength="16" type="datetime-local" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">活动结束时间</th>
                    <td class="formValue">
                        <input id="EndDate" name="EndDate" minlength="6" maxlength="16" type="datetime-local" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">活动类型</th>
                    <td class="formValue">
                        <select id="status_id" name="status_id" value="status_id">
                            <option value="1008">启用</option>
                            <option value="1009">冻结</option>
                            <option value="1011">删除</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">优惠类型</th>
                    <td class="formValue">
                        <input id="Ac_type" name="Ac_type" minlength="6" maxlength="16" type="text" class="form-control required" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">折扣</th>
                    <td class="formValue">
                        <input id="Discount" name="Discount" minlength="6" maxlength="16" type="text" class="form-control required" />
                    </td>
                </tr>

                <tr>
                    <th class="formTitle">满额</th>
                    <td class="formValue">
                        <input id="Ac_full" name="Ac_full" type="text" class="form-control" required />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">减额</th>
                    <td class="formValue">
                        <input id="Minus" name="Minus" type="text" class="form-control" required />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">优惠次数</th>
                    <td class="formValue">
                        <input id="Times" name="Times" type="text" class="form-control" required />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
<script src="~/Scripts/Activity/_Edit.js"></script>