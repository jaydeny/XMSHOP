
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>修改密码</title>
    <link href="/Content/js/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/User/User@AlterPwd.css" />
</head>
<body>
    <div class="pwd-alter">
        <div class="header">
            <h3>修改密码</h3>
        </div>
        <div class="main">
            <div class="form-group">
                <label>原密码</label>
                <input type="password" class="form-control">
                <span class="warning"></span>
            </div>
            <div class="form-group">
                <label>新密码</label>
                <input type="password" class="form-control" id="email">
                <span class="warning"></span>
            </div>
            <div class="form-group mar_b_20">
                <label>确认密码</label>
                <input type="password" class="form-control" id="tel">
                <span class="warning"></span>
            </div>
            <div>
                <button type="button" class="btn btn-default alter_but">确定</button>
            </div>
        </div>
    </div>
</body>
</html>

