@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<link href="~/Content/Dic/Dic@Index.css" rel="stylesheet" />
<script src="~/Scripts/backEnd/Dic@Index.js"></script>
<div class="topPanel">
    <div class="toolbar">
        <div class="btn-group">
            <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
        </div>
        @if ((bool)ViewData["Add"])
        {
            <div class="btn-group">
                <a id="NF-add" authorize="yes" class="btn btn-primary dropdown-text" onclick="btn_add()"><i class="fa fa-plus"></i>新建</a>
            </div>
        }
        <div class="operate">
            <ul class="nav nav-pills">
                <li class="first">已选中<span>1</span>项</li>
                @{
                    if ((bool)ViewData["Update"])
                    {
                        <li><a id="NF-edit" authorize="yes" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>修改</a></li>
                    }
                    if ((bool)ViewData["Delete"])
                    {
                        <li><a id="NF-delete" authorize="yes" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a></li>
                    }
                }
            </ul>
            <a href="javascript:;" class="close"></a>
        </div>
    </div>
    <div class="search">
        <table>
            <tr>
                <td>
                    <div class="input-group">
                        @{
                            <input type="radio" name="tag" value="0" checked /><label class="m-20">标识</label>
                            var list = ViewData["list"] as List<XM.Model.DicEntity>;
                            foreach (var item in list)
                            {
                                <input type="radio" name="tag" value="@item.id" /><label class="m-20">@item.name</label>
                            }
                        }

                    </div>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="gridPanel">
    <table id="gridList"></table>
</div>

