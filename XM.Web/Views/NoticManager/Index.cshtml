
@{
    Layout = "~/Views/Shared/_Index.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
    <script src="~/Scripts/notic/notic@index.js"></script>
</head>
<body>
    <div id="QryDayTotal">
        <div class="topPanel">
            <div class="btn-group">
                <a class="btn btn-primary" onclick="$.reload()"><span class="glyphicon glyphicon-refresh"></span></a>
            </div>
            <div class="search">
                <table>
                    <tr>
                        <td style="padding-left:30px;">
                            <div class="input-group">
                                <input id="txt_search_title" type="text" placeholder="请输入标题" class="form-control" style="width: 150px;">
                            </div>
                        </td>
                        <td style="padding-left:30px;">
                            <div class="input-group">
                                <input id="txt_search_receiver" type="text" placeholder="请输入接收方" class="form-control" style="width: 150px;">
                            </div>
                        </td>
                        <td>
                            <div class="input-group">
                                <span class="input-group-btn">
                                    <button id="btn_search_title" type="button" class="btn  btn-primary"><i class="fa fa-search"></i></button>
                                </span>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="gridPanel">
            <table id="gridList" cellspacing="0" cellpadding="0" style="font-size:15px; border-bottom:dashed 1px"></table>
            <div id="gridPager">
               
            </div>
        </div>
    </div>
</body>
</html>
