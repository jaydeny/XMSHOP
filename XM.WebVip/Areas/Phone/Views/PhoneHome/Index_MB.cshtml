    <script type="text/javascript" src="~/Areas/Phone/Script/Home/scrolltopcontrol.js"></script>
    <script type="text/javascript" src="~/Areas/Phone/Script/Home/TouchSlide.js"></script>
    <script>
        new Vue({
            el: "#app",
            data: {
                brand: [],
                popular:[]
            },
            created: function () {
                this.getBrandData();
                this.getPopularData();
            },
            methods: {
                getBrandData() {
                    $.ajax({
                        url: "/Phone/PhoneProduct/getBrand",
                        dataType: 'json'
                    }).then((data) => {
                       // console.log(data.rows)
                        this.brand = data.rows;
                    });
                },
                getPopularData() {
                    const param = {
                        rows : 90
                    }
                    $.ajax({
                        url: "/Phone/PhoneProduct/getPopular",
                        data:param,
                        dataType: 'json'
                    }).then((data) => {
                       // console.log(data.rows)
                        this.popular = data.rows;
                    });
                },
                JumpInfo(id) {
                    location.href = "/Phone/PhoneProduct/ProductInfo?id=" + id;
                }
            }
        })
    </script>
    <script>
        TouchSlide({
            slideCell: "#slideBox",
            titCell: ".hd ul", //开启自动分页 autoPage:true ，此时设置 titCell 为导航元素包裹层
            mainCell: ".bd ul",
            effect: "leftLoop",
            autoPage: true,//自动分页
            autoPlay: true, //自动播放
        });
    </script>
    
</body>
</html>
