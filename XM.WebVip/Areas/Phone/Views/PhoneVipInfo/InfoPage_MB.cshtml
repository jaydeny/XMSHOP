            },
            methods: {
                //用户退出发送请求
                loginUP() {
                    $.ajax({
                        url: "/Phone/PhoneHome/SignUp_MB"
                    }).then((data) => {
                        location.href = "/Phone/PhoneVipInfo/InfoPage_MB";
                    });
                },
                //初始化
                init() {
                    $.ajax({
                        url: "/Phone/PhoneVipInfo/getName",
                        dataType:'json'
                    }).then((data) => {
                        this.is_SignIn = data.success;
                        this.name = data.data;
                    });
                },
                //点击登陆按钮
                login() {
