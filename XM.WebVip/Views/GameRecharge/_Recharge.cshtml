                        <button class="btn btn-default action">100</button>
                        <button class="btn btn-default">200</button>
                        <button class="btn btn-default">300</button>
                        <button class="btn btn-default">500</button>
                        <button class="btn btn-default">1000</button>
                        <button class="btn btn-default">1500</button>
                        <button class="btn btn-default">2000</button>
                    </div>
                </div>
            </div>
            <div class="btn-box ">
                <button type="button" class="btn recharge-confirm" id="RechargeToShop">确定</button>
            </div>
        </div>
    </div>
    <script src="~/Scripts/Game/game@Recharge.js"></script>
