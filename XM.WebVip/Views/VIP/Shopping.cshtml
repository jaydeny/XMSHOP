@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="~/Content/CSS/shopping.css" />
</head>
<body>
    <div class="shopping_cart">
        <div class="layout">
            <!-- 未登录提示 -->
            <div class="login-prompt">
                <p>
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    您还没有登录！登录后可查看之前加入的商品
                    <a class="btn_login" href="#" role="button">登录</a>
                </p>
            </div>
            <!-- 空购物车 -->
            <div class="empty-shopping hidden">
                <div class="empty-shopping-img"></div>
                <p class="title">您的购物车里什么也没有哦~</p>
                <a class="but_shopping">去逛逛</a>
            </div>
            <!-- 购物车 -->
            <div class="shopping-box">
                <div class="shopping-list">
                    <!-- 标题 -->
                    <div class="title shopping-row">
                        <div class="flex-1">
                            <input class="checkAll" type="checkbox" style="position: relative;left: -25%;" />全选
                        </div>
                        <div class="flex-3">
                            商品
                        </div>
                        <div class="flex-1">
                            单价
                        </div>
                        <div class="flex-1">
                            数量
                        </div>
                        <div class="flex-1">
                            小计
                        </div>
                        <div class="flex-1">
                            操作
                        </div>
                    </div>
                    <!-- 主体 -->
                    <form>
                        <div class="shopping-row">
                            <div class="flex-1">
                                <input class="check" type="checkbox" />
                                <img class="img" />
                            </div>
                            <div class="flex-3">
                                商品名
                            </div>
                            <div class="flex-1">
                                ¥ 1499.00
                            </div>
                            <div class="flex-1">
                                <div class="input-group" style="margin: 0 auto; width: 120px;">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                    <input type="text" class="form-control" value="1" style="font-size: 18px;text-align: center;padding: 0;">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="flex-1">
                                <span class="price">¥ 1499.00</span>
                            </div>
                            <div class="flex-1" class="">
                                <a class="delete">删除</a>
                            </div>
                        </div>
                        <div class="shopping-row">
                            <div class="flex-1">
                                <input class="check" type="checkbox" />
                                <img class="img" />
                            </div>
                            <div class="flex-3">
                                商品名
                            </div>
                            <div class="flex-1">
                                ¥ 1499.00
                            </div>
                            <div class="flex-1">
                                <div class="input-group" style="margin: 0 auto; width: 120px;">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                    <input type="text" class="form-control" value="1" style="font-size: 18px;text-align: center;padding: 0;">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                        </button>
                                    </span>
                                </div>
                            </div>
                            <div class="flex-1">
                                <span class="price">¥ 1499.00</span>
                            </div>
                            <div class="flex-1" class="">
                                <a class="delete">删除</a>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- 底部 -->
                <div class="shopping-bottom">
                    <div class="operation">
                        <input type="checkbox" class="checkAll" /> 全选
                        <a class="deleteAll">删除</a>
                    </div>
                    <div class="bottom-but"><a class="but-order">立即下单</a></div>
                    <div class="total">
                        <p>总计：<span>￥<b>9999</b></span></p>
                        <p class="hint">已选择<span>6</span>件商品</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
