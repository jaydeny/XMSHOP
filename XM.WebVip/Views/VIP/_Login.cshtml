
<div class="login-main">
    <div class="title">
        <a href="#" id="login_account" class="selected">账号登录</a><span class="line"></span><a href="#" id="login_note">短信登录</a>
    </div>
    @*账号登录*@
    <div id="account_div">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="手机号/账号" name="txt_an" id="txt_an">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="密码" name="txt_pwd" id="txt_pwd">
        </div>
        <button type="button" class="btn btn-default col-xs-12 login_btu" id="bntLogin">登录</button>
        <div class="hint">
            <p></p>
        </div>
    </div>

    @*短信登录*@
    <div id="note_div" class="hidden">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="手机号">
        </div>
        <div class="row form-group">
            <div class="col-lg-12">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="请输入验证码">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">发送验证码</button>
                    </span>
                </div>
            </div>
        </div>
        <button type="button" class="btn btn-default col-xs-12 login_btu" id="bntLogin">登录</button>
        <div class="hint">
            <p></p>
        </div>
    </div>
    <div class="agreement">
        <input type="checkbox" checked onclick="return false;" />
        <span>
            我阅读并同意<a><span class="title">《会员注册协议》</span></a>和<a><span class="title">《隐私保护政策》</span></a>
        </span>
    </div>
    <div class="shortcuts">
        <a id="back">忘记密码</a><span></span><a id="register">注册账号</a>
    </div>
</div>
<script src="~/Scripts/vip/login.js"></script>
